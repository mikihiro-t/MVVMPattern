<Window
    x:Class="ListDetail.View.DetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ListDetail.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Detail"
    Width="400"
    Height="400"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center">
        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
            <Label Width="80" Content="Text1" />
            <TextBox
                Width="200"
                Height="30"
                Text="{Binding Text1.Value}" />
        </StackPanel>
        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
            <Label Width="80" Content="Number1" />
            <TextBox
                Width="200"
                Height="30"
                Text="{Binding Number1.Value}" />
        </StackPanel>
        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
            <Label Width="80" Content="Check1" />
            <CheckBox IsChecked="{Binding Check1.Value}" />
        </StackPanel>
        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Command="{Binding ButtonClose}"
                Content="Close" />
        </StackPanel>

    </StackPanel>
</Window>
